<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="address" inherit_id="website_sale.address">
        <!-- Slider to show whether customer is private or company -->
        <xpath expr="//div[contains(@t-attf-class, 'div_vat')]" position="after">
            <div id="edicode_div" t-attf-class="form-group #{error.get('edicode') and 'has-error' or ''} col-md-6 div_edicode">
                <label class="control-label label-optional" for="edicode">Edicode</label>
                <input type="text" name="edicode" class="form-control" t-att-value="'edicode' in checkout and checkout['edicode']" />
            </div>
            <div id="einvoice_operator_div" t-attf-class="form-group #{error.get('einvoice_operator') and 'has-error' or ''} col-md-6 div_einvoice_operator">
                <label class="control-label label-optional" for="einvoice_operator">eInvoice Operator</label>
                <input type="text" name="einvoice_operator" class="form-control" t-att-value="'einvoice_operator' in checkout and checkout['einvoice_operator']" />
                <select class="form-control einvoice_operator-select" t-attf-name="#{counter}-country_id">
                    <option></option>
                    <t t-foreach="operators" t-as="operator">
                        <option t-att-value="operator.id" t-esc="operator.name"/>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
