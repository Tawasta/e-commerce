<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="extra_info" inherit_id="website_sale.extra_info">
        <xpath expr="//textarea[@name='Give us your feedback...']/../.." position="replace">
            <div class="form-group form-field o_website_form_custom">
                <div class="col-md-3 col-sm-4 text-right">
                    <label class="control-label" for="description">Order Comments</label>
                </div>
                <div class="col-md-7 col-sm-8">
                    <textarea class="form-control o_website_form_input" name="description"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
