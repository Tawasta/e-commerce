<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="product" inherit_id="website_sale.product">
        <xpath expr="//div[@itemprop='description']" position="after">
            <div class="mt8 mb8">
                <div id="website_sale_product_information" class="container mb4" style="text-align: center;">
                    <div class="container">
                        <t t-esc="website_product_description"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
