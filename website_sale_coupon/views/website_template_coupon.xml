<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="discount_code_form">
        <h4>Discount code</h4>
        <p>Use discount codes here</p>

        <form t-if="website_sale_order and website_sale_order.website_order_line"
              action="/shop/coupon" method="post" class="mb32">
            <input type="hidden" name="csrf_token"
                   t-att-value="request.csrf_token()"/>
            <div class="input-group">
                <input id="coupon-code" name="code" class="form-control"
                       type="text" placeholder="code..."/>
                <div class="input-group-btn">
                    <a id="btn-coupon-submit" class="btn btn-default">Apply</a>
                </div>
            </div>
            <div id="coupon-code-error" class="hidden alert alert-danger mt8">
                Erronous discount code
            </div>
            <div id="coupon-code-success"
                 class="hidden alert alert-success mt8">Discount code used!
            </div>
        </form>
    </template>

</odoo>
