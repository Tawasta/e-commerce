<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="website_sale_coupon_action" model="ir.actions.act_window" >
        <field name="name">Website coupons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">website.sale.coupon</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="website_sale_coupon_log_action" model="ir.actions.act_window" >
        <field name="name">Website coupons log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">website.sale.coupon.log</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree, form</field>
    </record>

    <menuitem id="website_sale_coupon_top_menu"
              name="Website coupons"
              action="website_sale_coupon_action"
              sequence="50"
              parent="sales_team.menu_base_partner"
              groups="sales_team.group_sale_manager"
              />

    <menuitem id="website_sale_coupons_menu"
              name="Coupons"
              action="website_sale_coupon_action"
              sequence="10"

              parent="website_sale_coupon_top_menu"
              groups="sales_team.group_sale_manager"
              />

    <menuitem id="website_sale_coupons_log_menu"
              name="Coupons log"
              action="website_sale_coupon_log_action"
              sequence="20"
              parent="website_sale_coupon_top_menu"
              groups="sales_team.group_sale_manager"
              />

</odoo>