<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.create.invoice</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="website_sale_force_autoinvoice" data-string="Force-Autoinvoice"
                     string="Website Sale Forse Autoinvoice"
                     data-key="website_sale_force_autoinvoice"
                     groups="sales_team.group_sale_manager"
                     id="website_sale_force_autoinvoice_setting">
                     <h2 id="futural_edu_website_registration">Allow invoice creation automatically when the purchase process goes through</h2>
                     <div class="row mt16 o_settings_container"
                         title="Allow invoice creation automatically when the purchase process goes through ">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="create_invoice"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="create_invoice"/>
                                <div class="text-muted">
                                    Allow invoice creation automatically when the purchase process goes through.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
