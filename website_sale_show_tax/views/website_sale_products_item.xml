<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="products_item" name="Products item with taxes" inherit_id="website_sale.products_item">
        <xpath expr="//span[@t-esc='product.website_price']" position="after">
            <t t-set="tax_ids" t-att-value="product.sudo().website_tax_ids" />

            <t t-foreach="product.website_tax_ids" t-as="website_tax">
                <span class="badge" t-field="website_tax.sudo().description" />
            </t>
        </xpath>
    </template>
</odoo>
