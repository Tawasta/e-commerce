<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_attribute_view_form" model="ir.ui.view">
        <field name="name">product.attribute.form.dependent</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="sale.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <field name="html_color" position="after">
                <field name="dependent_attribute_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>

    <record id="variants_tree_view" model="ir.ui.view">
        <field name="name">product.attribute.value.tree.dependent</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="sale.variants_tree_view"/>
        <field name="arch" type="xml">
            <field name="html_color" position="after">
                <field name="dependency_id" />
                <field name="dependent_attribute_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>
</odoo>
